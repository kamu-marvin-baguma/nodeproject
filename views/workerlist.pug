doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Document
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx' crossorigin='anonymous')
body
    .container
    h5 hello, #{username}
    h3 List of employees
    a.btn.btn-warning(href="/logout") Log out

    if workers.length
        table.table
            thead.thead-dark
                tr
                    th(scope='col') #
                    th(scope='col') Name
                    th(scope='col') Field
                    th(scope='col') Age
                    th(scope='col') Salary
                      th(scope='col') Action 
            tbody
            each worker in workers 
                tr
                    th(scope='row') #{worker._id}
                    td #{worker.name}
                    td  #{worker.field}
                    td #{worker.age}
                    td #{worker.salary}
                    td
                        form(method= "Post",Action="/workers/worker-list")
                            input(type="hidden",name="_id",value=worker._id) 
                            button(type="submit") DELETE
                    td
                        a(href="/editworker/" + worker._id) edit 
    else 
        p there are no registered workers        
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js' integrity='sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa' crossorigin='anonymous')
